# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ShipAny App
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_THEME=default
NEXT_PUBLIC_APPEARANCE=system
NEXT_PUBLIC_DEBUG=false

# Auth
AUTH_URL=http://localhost:3000/api/auth
AUTH_SECRET=replace-with-openssl-rand-base64-32

# Database
DATABASE_URL=postgres://shipany:shipany@localhost:5433/shipany
DATABASE_PROVIDER=postgresql
DB_SINGLETON_ENABLED=true

# Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# RapidAPI
RAPIDAPI_KEY=
RAPIDAPI_HOST_YOUTUBE=
RAPIDAPI_HOST_TIKTOK=

# Google Translation
GOOGLE_TRANSLATE_KEY=

# Google Cloud Storage (for subtitle/video files)
GCS_BUCKET=
# Base64 encoded service account JSON
GCS_SERVICE_ACCOUNT_KEY=

# Vercel Blob (optional; preferred on Vercel)
BLOB_READ_WRITE_TOKEN=

# Creem payment
CREEM_SECRET_KEY=
CREEM_WEBHOOK_SECRET=
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Creem API key for Next.js SDK
CREEM_API_KEY=
# Optional publishable key if needed on frontend
NEXT_PUBLIC_CREEM_PUBLISHABLE_KEY=

